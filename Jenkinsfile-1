pipeline {
    agent any

    stages {
        stage('Prepare') {
            steps {
                script {
                    // Retrieve the current Git commit
                    def GIT_COMMIT = sh(
                        returnStdout: true,
                        script: 'git rev-parse HEAD'
                    ).trim()

                    // Retrieve the current Git branch
                    def GIT_BRANCH = sh(
                        returnStdout: true,
                        script: 'git rev-parse --abbrev-ref HEAD'
                    ).trim()

                    echo "Current Git commit: ${GIT_COMMIT}"

                    // Checkout the Git commit
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: GIT_COMMIT]],
                        doGenerateSubmoduleConfigurations: false,
                        extensions: [[$class: 'LocalBranch']],
                        submoduleCfg: [],
                        userRemoteConfigs: [[url: 'https://github.com/piyush-muppala/old.git']]
                    ])
                }
            }
        }

        stage('Build master') {
            when {
                expression {
                    // Add your conditions based on the branch or commit
                    return GIT_BRANCH == 'origin/master'
                }
            }
            steps {
                echo 'Build master files'
            }
        }

        stage('Build ops') {
            when {
                expression {
                    // Corrected the equality check here
                    return GIT_BRANCH == 'origin/ops'
                }
            }
            steps {
                echo 'Building ops files'
            }
        }

        stage('Build master and ops') {
            when {
                expression {
                    // Add your conditions based on the branch or commit
                    return GIT_BRANCH in ['origin/master', 'origin/ops']
                }
            }
            steps {
                echo 'Build master files and ops files'
            }
        }
    }
}
